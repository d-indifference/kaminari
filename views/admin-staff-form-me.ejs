<%- include('fragments/head'); %>
<%- include('fragments/admin-session'); %>
<%- include('fragments/admin-bar'); %>

<hr>

<h1 class="site-title"><%= header %></h1>

<div class="admin-panel-header">
    Edit My Profile
</div>

[<a href="/admin">Go back</a>]
<br>

<div class="postarea">
    <form action="/admin/staff/me/email" method="post">
        <table cellpadding="7">
            <tbody>
            <tr>
                <td class="postblock">Email</td>
                <td><input type="text" name="email" size="28" value="<%= email %>"></td>
            </tr>
            </tbody>
        </table>

        <input type="submit" value="Save changes">
    </form>

    <hr>

    <form action="/admin/staff/me/password" method="post">
        <table cellpadding="7">
            <tbody>
            <tr>
                <td class="postblock">Old password</td>
                <td><input type="password" name="oldPassword" size="28"></td>
            </tr>
            <tr>
                <td class="postblock">New password</td>
                <td><input type="password" name="newPassword" size="28"></td>
            </tr>
            <tr>
                <td class="postblock">Confirm password</td>
                <td><input type="password" name="confirmPassword" size="28"></td>
            </tr>
            </tbody>
        </table>

        <input type="submit" value="Save changes">
    </form>
</div>

[<a href="/admin">Go back</a>]

